<header class="header">
<h1>Biblioteca</h1>
<ul class="header__lista">
  <li><a class="header__link" href="/select">Livros cadastrados</a></li>
  <li><a class="header__link" href="/">Inicio</a></li>
</ul>
</header>

<section class="form__container">

<form class="form" name="formUpdate" action="/select" method="post">
  <legend class="form__legend">Ficha de livro</legend>
  <label>Nome do livro</label>
  <input class="form__input" type='text' name="nome" id="nome" value="{{nome}}">

  <label>Autor</label>
  <input class="form__input" type='text' name="autor" id="autor" value="{{autor}}" >

  <label>Editora</label>
  <input class="form__input" type='text' name="editora" id="editora" value="{{editora}}">

  <label>Edição</label>
  <input class="form__input" type='number' name="edicao" id="edicao" value="{{edicao}}">

  <label>Categoria</label>
  <select class="form__input" name="categoria" >
    <option value="value="{{categoria}}"" selected></option>
    <option value="romance">Romance</option>
    <option value="literatura">Literatura</option>
    <option value="ficção">Ficção</option>
    <option value="escolar">Escolar</option>
    <option value="outros">Outros</option>
  </select>

  <label>Local</label>
  <input class="form__input" type='text' name="local" id="local" value="{{local}}">

  <input class="form__input" type='hidden' value={{isbn}} name="isbn" id="isbn">

  <input class="form__input submit" type="submit" value="Atualizar livro">
</form>

</section>